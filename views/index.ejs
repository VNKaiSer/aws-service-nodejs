<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body{
            width: 700px;
            margin: auto;
        }
    </style>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h1>Hello world</h1>
    <form 
        action="save" 
        enctype="multipart/form-data"
        method="post"
    >   
        <label for="id">Id</label>
        <input type="text" name="id" id="id"> <br>
        <label for="name">Name</label>
        <input type="text" name="name" id="name"> <br>
        <label for="gender">Gender</label>
        Male <input type="radio" name="gender" id="gender" value="male">
        Female <input type="radio" name="gender" id="gender" value="female"> <br>
        <label for="gpa">GPA</label>
        <input type="number" name="gpa" id="gpa">  <br>
        <label for="subject_enjoy">Subject enjoy</label> <br>
        IT Lecturer <input type="checkbox" name="subject_enjoy" id="subject_enjoy" value="IT Lecturer">  <br>
        Project Management <input type="checkbox" name="subject_enjoy" id="subject_enjoy" value="Project Management"><br>
        Website Development <input type="checkbox" name="subject_enjoy" id="subject_enjoy" value="Website Development"><br>
        <label for="majors">Majors</label>
        <select name="majors"> 
            <option value="SE">SE</option>
            <option value="IS">IS</option>
            <option value="DA">DA</option>
        </select> <br>
        <label for="avatar">Avatar</label>
        <input type="file" name="avatar" required> <br>

        <button type="submit">Click Here</button>
    </form>

    <table style="table-layout: fixed;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Avg</th>
                <th>Subject enjoy</th>
                <th>Majors</th>
                <th>Avatar</th>
            </tr>
        </thead>
        <tbody>
            <% if (students.length >  0) { %>
                <% students.forEach((student) =>{ %>
                    <tr>
                        <td><%= student.id %></td>
                        <td><%= student.name %></td>
                        <td><%= student.gender %></td>
                        <td><%= student.gpa %></td>
                        <td><%= student.subject_enjoy %></td>
                        <td><%= student.majors %></td>
                        <td><img src="<%= student.image %>" alt="" width="100"></td>

                    </tr>
               <% }) %>
            <% } %>
            
        </tbody>
    </table>

</body>
</html>